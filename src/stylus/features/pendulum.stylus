pendulum_duration = configuration.pendulum_duration

@keyframes pendulum
  0%   { left: 0%;  }
  50%  { left: 70%; }
  100% { left: 0%;  }

.progrecss.pendulum
  overflow: hidden
  &:after
    width                     30%
    animation-iteration-count infinite
    animation-name            pendulum
    animation-duration        (pendulum_duration * 1s)
