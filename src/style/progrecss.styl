/**
  * Progre(c)ss - 2016
*/
$ns = progrecss

create-el()
  position   absolute
  display    block
  content    ''
  height     6px
  top        0
  left       0

.{$ns}
  display   block
  position  relative
  /**
  * Our before element acts as the progress value indicator
  */
  &:before
    create-el()
    transition width .25s ease 0s
    background red
    z-index 2

  /**
    * If paused pause the play state of any animation that may be happening
  */
  &--pause
    &:before
      animation-play-state paused
  /**
    * Reverse it if we wish
  */
  &--reverse
    &:before
      animation-direction reverse
  /**
    * Positional helpers
  */
  &--bottom
    &:before
      top 100%
      margin-top -6px
  &--fixed
    &:before
      position fixed

for percent in (0..100)
  .{$ns}[data-{$ns}={'"' + percent + '"'}]
    &:before
      width (percent * 1%)
